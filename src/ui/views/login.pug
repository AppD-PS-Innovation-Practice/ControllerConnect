extends layout

block content
  .container
    .row.justify-content-center
      .col-md-6
        h2 Login
        form(action='/login', method='POST')
          .form-group
            label(for='user_email') Email address
            input#user_email.form-control(type='email', name='user_email', placeholder='Enter email', required)
          .form-group
            label(for='user_pass') Password
            input#user_pass.form-control(type='password', name='user_pass', placeholder='Password', required)
          button.btn.btn-primary(type='submit') Login