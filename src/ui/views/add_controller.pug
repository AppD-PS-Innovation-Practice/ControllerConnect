extends layout

block content
  h1 AppDynamics Controller Connect
  form(method='POST', action='/controllers/add')
    .form-group
      label Controller Name:
      input.form-control(name='controller_name', type='text')
    .form-group
      label Client ID:
      input.form-control(name='client_id', type='text')
    .form-group
      label Client Secret:
      input.form-control(name='client_secret', type='text')
    br
    input.btn.btn-primary(type='submit', value='Submit')